  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Server",
      "skipFiles": [
        "node_modules",
        "<node_internals>/**"
      ],
      "resolveSourceMapLocations": [
        "${workspaceFolder}/Server/**",
        "!**/node_modules/**"
      ],
      "preLaunchTask": "pnpm: build:server",
      "program": "${workspaceFolder}/Server/dist/index.js",
      "outFiles": ["${workspaceFolder}/Server/dist/**/*.js"],
      "sourceMaps": true
    }
  ]
}