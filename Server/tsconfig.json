{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2017",
    "inlineSourceMap": true,
    "outDir": "./dist",
    "allowJs": false,
    "strict": true,
    "sourceRoot": "src",
    "rootDir": "src",
    "incremental": true,
    "composite": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"],
    "moduleResolution": "node"
  },
  "include": ["src"],
  "exclude": [
    "node_modules"
  ]
}
